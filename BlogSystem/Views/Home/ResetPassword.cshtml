@{
    ViewBag.Title = "Reset password";
}

<div class="container">
    <div class="header">
        <h4>
            <img src="~/imgs/bootstrap-icons/lock-fill.svg" alt="" width="22" height="22" />
            <b>Reset password</b>
        </h4>
        Reset your user password by typing in your user email and a new password below.
    </div>

    <p>
        <span class="text-danger">@ViewBag.Error</span>
        <span class="text-success">@ViewBag.Success</span>
    </p>

    <fieldset>
        <legend>
            Reset the user password
        </legend>

        <form method="post" asp-action="ResetPassword" asp-controller="Home">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <input type="hidden" name="token" value='@TempData["token"]' />

            <div class="form-group row">
                <label class="control-label col-sm-2" for="email">Your email:</label>
                <div class="col-sm-7">
                    <input type="email" class="form-control" name="email" id="email" />
                </div>
            </div>
            <div class="form-group row">
                <label class="control-label col-sm-2" for="password">New password:</label>
                <div class="col-sm-7">
                    <input type="password" class="form-control" name="password" id="password" />
                </div>
            </div>
            <div class="form-group row">
                <label class="control-label col-sm-2" for="password2">Confirm new password:</label>
                <div class="col-sm-7">
                    <input type="password" class="form-control form" name="password2" id="password2" />
                </div>
            </div>
            <div class="offset-sm-2 col-sm-10">
                <button type="submit" class="btn btn-primary">Save</button>
            </div>
        </form>

    </fieldset>
</div>
